{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "./src"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
